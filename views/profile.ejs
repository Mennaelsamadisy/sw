<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(to right, #e9f1ff, #f7faff);
      margin: 0;
      padding: 0;
    }

    nav {
      background-color: #fff;
      padding: 20px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

    .brand {
      font-size: 24px;
      font-weight: bold;
      color: #007BFF;
    }

    .user {
      font-size: 16px;
      color: #555;
    }

    .container {
      max-width: 600px;
      margin: 30px auto;
      background: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    form label {
      font-weight: 600;
      margin-top: 15px;
      display: block;
    }

    form input {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 6px;
      background: #f9f9f9;
    }

    input[readonly] {
      background-color: #eee;
    }

    .buttons {
      display: flex;
      justify-content: flex-start;
      margin-top: 20px;
      gap: 10px;
    }

    .edit-btn {
      background: #ffc107;
      color: #000;
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
    }

    .save-btn {
      background: #28a745;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
    }

    .settings {
      margin-top: 30px;
      display: flex;
      justify-content: space-between;
    }

    .settings button {
      background: none;
      border: none;
      color: #007BFF;
      font-size: 15px;
      cursor: pointer;
    }

  </style>
</head>
<body>
  <nav>
    <div class="brand">ðŸŽ‰ Event Planner</div>
    <div class="user">Welcome, <%= user.name.charAt(0).toUpperCase() + user.name.slice(1) %></div>
  </nav>

  <div class="container">
    <h1>Profile</h1>
    <form id="profileForm" method="POST" action="/update-profile">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" value="<%= user.name %>" readonly>

      <label for="email">Email</label>
      <input type="email" id="email" value="<%= user.email %>" readonly>

      <label for="phone">Phone Number</label>
      <input type="text" id="phone" value="<%= user.phone_number %>" readonly>

      <div class="buttons">
        <button type="button" class="edit-btn" onclick="enableEdit()">Edit</button>
        <button type="submit" class="save-btn">Save</button>
      </div>
    </form>

    <div class="settings">
      <button onclick="location.href='/change-password'"><i class="fas fa-key"></i> Change Password</button>
      <button onclick="location.href='/delete-account'"><i class="fas fa-trash-alt"></i> Delete Account</button>
    </div>
  </div>

  <script>
    function enableEdit() {
      const input = document.getElementById('name');
      input.removeAttribute('readonly');
      input.style.backgroundColor = '#fff';
    }
  </script>
</body>
</html>
