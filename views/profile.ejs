<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Inter', sans-serif;
      background: linear-gradient(to right, #e9f1ff, #f7faff);
      color: #333;
    }
    nav {
      background-color: #ffffff;
      padding: 20px 40px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    nav .brand {
      font-size: 24px;
      font-weight: 700;
      color: #0f65e6;
    }

    nav .user {
      font-weight: 500;
      color: #555;
    }
    .container {
      max-width: 600px;
      margin: auto;
      margin-top: 25px;
      margin-bottom: 25px;
      background: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #333;
    }
    .info{
      padding-right: 15px;
    }
    .info label {
      font-weight: bold;
      margin-top: 15px;
      display: block;
    }

    .info input, .info textarea {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 16px;
      background-color: #f9f9f9;
    }

    .info input[readonly], .info textarea[readonly] {
      background-color: #f0f0f0;
    }

    .buttons {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 20px;
    }

    .buttons button {
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
    }

    .edit-btn {
      background-color: #ffc107;
      color: #000;
    }

    .save-btn {
      background-color: #28a745;
      color: white;
    }

    .message, .warning {
      text-align: center;
      font-weight: bold;
      margin-top: 20px;
    }

    .message {
      color: green;
      display: none;
    }

    .warning {
      color: red;
      display: none;
    }

    .nav-buttons {
      margin-top: 40px;
      display: flex;
      justify-content: space-between;
    }

    .nav-buttons button {
      background: none;
      border: none;
      font-size: 16px;
      cursor: pointer;
      color: #007bff;
    }

    .nav-buttons i {
      margin-right: 8px;
    }

    .signout-popup {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.5);
      justify-content: center;
      align-items: center;
    }

    .signout-content {
      background: white;
      padding: 30px;
      border-radius: 8px;
      text-align: center;
    }

    .signout-content h2 {
      font-size: 28px;
      margin-bottom: 10px;
    }

    .signout-content p {
      font-size: 14px;
      color: #555;
    }

    .signout-actions {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      gap: 20px;
    }

    .signout-actions button {
      padding: 8px 20px;
      border: none;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
    }

    .cancel-btn {
      background-color: #6c757d;
      color: white;
    }

    .confirm-signout-btn {
      background-color: #dc3545;
      color: white;
    }
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        align-items: center;
      }

      nav {
        flex-direction: column;
        gap: 10px;
      }
    }
  </style>
</head>
<body>
  <nav>
    <div class="brand">ðŸŽ‰ Event Planner</div>
    <div class="user">Welcome, <%= user.name.charAt(0).toUpperCase() + user.name.slice(1)%> </div>
  </nav>
  <div class="container">
    <h1>Welcome, <span id="userName">John Doe</span></h1>

    <div class="info">
      <label>Name</label>
      <input type="text" id="name" value="John Doe" readonly>

      <label>Username</label>
      <input type="text" id="username" value="johnny" readonly>

      <label>Email Address</label>
      <input type="text" id="email" value="john@example.com" readonly>

      <label>Phone Number</label>
      <input type="text" id="phone" value="123-456-7890" readonly>

      <label>Bio</label>
      <textarea id="bio" rows="4" readonly>This is a short bio...</textarea>

      <div class="buttons">
        <button class="edit-btn" onclick="toggleEdit(true)">Edit</button>
        <button class="save-btn" onclick="saveChanges()">Save</button>
      </div>

      <div id="saveMessage" class="message">All Your Changes Have Been Made Successfully!</div>
      <div id="warningMessage" class="warning">Please fill in all fields before saving and ensure formats are correct.</div>
    </div>

    <div class="nav-buttons">
      <button onclick="location.href='settings.html'"><i class="fas fa-cog"></i> Settings</button>
      <button onclick="showSignOut()"><i class="fas fa-sign-out-alt"></i> Sign Out</button>
    </div>
  </div>

  <!-- Sign Out Popup -->
  <div class="signout-popup" id="signOutPopup">
    <div class="signout-content">
      <h2>Sign Out?</h2>
      <p>Are You Sure, You Want To Sign Out?</p>
      <div class="signout-actions">
        <button class="cancel-btn" onclick="hideSignOut()">Cancel</button>
        <button class="confirm-signout-btn" onclick="confirmSignOut()">Sign Out</button>
      </div>
    </div>
  </div>

  <script>
    function toggleEdit(enable) {
      document.querySelectorAll('#name, #username, #email, #phone, #bio').forEach(input => {
        input.readOnly = !enable;
        input.style.backgroundColor = enable ? '#fff' : '#f0f0f0';
      });
    }

    function saveChanges() {
      const name = document.getElementById('name').value.trim();
      const username = document.getElementById('username').value.trim();
      const email = document.getElementById('email').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const bio = document.getElementById('bio').value.trim();

      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const phoneRegex = /^[0-9\-\+\s\(\)]+$/;

      if (!name || !username || !email || !phone || !bio ||
          !emailRegex.test(email) || !phoneRegex.test(phone)) {
        document.getElementById('warningMessage').style.display = 'block';
        document.getElementById('saveMessage').style.display = 'none';
        return;
      }

      document.getElementById('warningMessage').style.display = 'none';
      toggleEdit(false);
      document.getElementById('saveMessage').style.display = 'block';
      setTimeout(() => {
        document.getElementById('saveMessage').style.display = 'none';
      }, 3000);
    }

    function showSignOut() {
      document.getElementById('signOutPopup').style.display = 'flex';
    }

    function hideSignOut() {
      document.getElementById('signOutPopup').style.display = 'none';
    }

    function confirmSignOut() {
      window.location.href = 'login.html';
    }
  </script>

</body>
</html>

